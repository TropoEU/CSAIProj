# ===========================================
# CSAI Backend Environment Variables
# Copy this file to .env and fill in your values
# ===========================================

# Database (PostgreSQL)
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=your_db_name
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# n8n Workflow Engine
N8N_HOST=localhost
N8N_PORT=5678
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=your_n8n_user
N8N_BASIC_AUTH_PASSWORD=your_n8n_password

# LLM Provider (choose one: ollama, groq, claude, openai)
LLM_PROVIDER=ollama

# Ollama (local development)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=your_model_name

# Groq (free tier available)
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama-3.3-70b-versatile

# Claude (Anthropic)
# ANTHROPIC_API_KEY=your_anthropic_api_key
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# OpenAI
# OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o

# Backend Server
PORT=3000

# JWT Secret (REQUIRED - generate a strong random string)
JWT_SECRET=generate_a_strong_random_string_at_least_32_chars

# Gmail OAuth2 (for email integration)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REDIRECT_URI=http://localhost:3000/api/email/oauth/callback

# Email Monitor
EMAIL_MONITOR_INTERVAL_MS=60000
EMAIL_MONITOR_ENABLED=false

# Platform Name (shown in emails)
PLATFORM_NAME=CSAI

# Frontend URLs (for CORS in production)
# ADMIN_DASHBOARD_URL=https://your-admin-domain.com
# CUSTOMER_DASHBOARD_URL=https://your-customer-domain.com
# CORS_ALLOWED_ORIGINS=https://domain1.com,https://domain2.com
